
 <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      Username<br />
      <%= f.text_field :userName  %>
    </div>
    <div class="field">
      First Name<br />
      <%= f.text_field :fname %>
    </div>
    <div class="field">
      Last Name<br />
      <%= f.text_field :lname %>
    </div>
    <div class="field">
      User Type<br />
      <%= f.text_field :userType,:value => 'student', :readonly => true %>
    </div>
    <div class="field">
      Password<br />
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>