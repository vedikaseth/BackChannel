<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Text <br>
    <%= f.text_area :postText, :cols => 50, :rows =>5 %>
  </div>
    <div class="field">
      <%= f.label :category_id %><br>
      <%= select("post", "category_id", Category.find(:all).collect{ |c| [ c.categoryName, c.id] }) %>
     </div>

    <%= f.hidden_field :user_id, :value => session[:userId] %>

    <%= label_tag :tags_string, "Tags (Separate multiple tags with a ; ):"  %>
    <%= text_field_tag :tags_string%>

  <div class="actions"> <br>
    <%= f.submit %>
  </div>
<% end %>
